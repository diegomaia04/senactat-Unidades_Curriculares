package main;

import java.awt.Graphics;

import javax.swing.JPanel;

import sprites.Nave;

@SuppressWarnings("serial")
public class Engine extends JPanel implements Runnable {
	/*************************
	 **** VINCULAR A NAVE ****
	 *************************/
	Nave nave = new Nave();
	Backdrop backdrop = new Backdrop();
	
	
	/********************
	 **** CONSTRUTOR ****
	 *********************/
	public Engine() {
		/**************************
		 **** CRIAR UMA THREAD ****
		 **************************/
		Thread game = new Thread(this);
		game.start(); // Iniciar processamento do jogo (run())
	}

	@Override
	public void run() {
		while(true) {
			/**************************
			 **** MECANICA DO JOGO ****
			 **************************/
			refresh(); // Atualizar o JPanel -> JFrame
			repaint(); // Redesenhar os assets
			delay(); // Tempo antes do refresh (ajustes UX)
			
			
		}
	}
		
		public void refresh() {
			
		}
		
		public void paintComponent(Graphics g) {
			nave.exibirNave(g);
			backdrop.exibirFundo(g);
			
			
		}
		
		public void delay() {
			/********************************
			 **** TRATAMENTO DE EXCECOES ****
			 ********************************/
			try {
				Thread.sleep(20); // milissegundos
				
			} catch (Exception e) {
				System.out.println(e);
			}
			
		
	} // Fim do metodo void
} // Fim da classe Engine
