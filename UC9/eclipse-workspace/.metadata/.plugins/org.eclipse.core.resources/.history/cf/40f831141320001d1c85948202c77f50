package main;

import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;

public class Backdrop {
	BufferedImage background;
	int posBackY = 0;
	int posBackX = 0;

	/********************
	 **** CONSTRUTOR ****
	 *********************/
	public Backdrop() {
		try {
			/***************************
			 **** CARREGAR A IMAGEM ****
			 ***************************/
			background = ImageIO.read(new File("img/background4.jpg"));
		} catch (Exception e) {
			System.out.println("Não foi possível carregar a imagem");
			System.out.println(e);
		}
	}

	/************************************************
	 **** METODO RESPONSAVEL POR DESENHAR A NAVE ****
	 ************************************************/
	public void exibirFundo(Graphics g) {
		g.drawImage(background, posBackX, posBackY, null); //

	}

}
